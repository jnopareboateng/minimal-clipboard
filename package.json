{
  "name": "minimal-clipboard",
  "version": "1.0.0",
  "description": "A minimalist cross-platform clipboard manager",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --win --linux",
    "dev": "electron . --dev",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags"
  },
  "keywords": [
    "clipboard",
    "productivity",
    "electron",
    "cross-platform"
  ],
  "author": "Joshua Opare-Boateng",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "active-win": "^8.2.1",
    "electron-store": "^8.1.0",
    "robotjs": "^0.6.0"
  },
  "build": {
    "appId": "com.jnopareboateng.minimal-clipboard",
    "productName": "Minimal Clipboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "extendInfo": {
        "LSUIElement": "1"
      },
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "synopsis": "Minimal Clipboard Manager",
      "description": "A minimalist cross-platform clipboard manager that runs in the background"
    },
    "nsis": {
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false,
      "include": "build/installer.nsh"
    }
  }
}
